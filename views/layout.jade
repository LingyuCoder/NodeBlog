doctype 5
html(xmlns:wb="http://open.weibo.com/wb")
  head
    meta(property="wb:webmaster", content="8984d0c69a7d9445")
    meta(name="description", content="天镶的博客，使用nodejs+mongodb搭建")
    meta(name="keywords", content="天镶,博客,skyinlayer,nodejs,mongodb,前端,html,css,javascript")
    title 天镶的博客
    link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/pageTools/remind.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    block style

  body
    div(class="b-clouds")
      div(class="clouds")
        div(class="cloud cloud-lg", style="left: 10%;top: 20%")
        div(class="cloud cloud-sm", style="top: 30%")
        div(class="cloud cloud-md", style="left: 20%;top: 50%")
        div(class="cloud cloud-lg", style="left: 60%;top: 20%")
        div(class="cloud cloud-sm", style="left: 50%;top: 30%")
        div(class="cloud cloud-md", style="left: 70%;top: 40%")
      div(class="block")
    div(class="scrollToTop", style="display:none", id="scrollToTop")
      span(class="glyphicon glyphicon-arrow-up")
    div(class='navbar navbar-inverse navbar-fixed-top')
      div(class="container")
        div(class='navbar-header')
          button(type='button', class='navbar-toggle', data-toggle='collapse', data-target='.navbar-collapse')
            span(class='icon-bar')
            span(class='icon-bar')
            span(class='icon-bar')
          a(class='navbar-brand', href='/index') 天镶的博客
        
        div(class='collapse navbar-collapse')
          ul(class='nav navbar-nav')
            li
              a(href='/index') 首页
            li
              a(href='/articleList') 文章列表
            li
              a(href='/search') 搜索
            li
              a(href='/gallary') 图片墙
            li(class="dropdown")
              a(href="#", class="dropdown-toggle", data-toggle="dropdown") 小玩意
                b(class="caret")
              ul(class="dropdown-menu")
                li
                  a(href="/broadchat") 版聊
            li
              a(href="/advicePage") 建议
            if user
              li
                a(href="/userCenter") 个人中心
          ul(class='nav navbar-nav navbar-right')
            if user
              li(class="dropdown")
                a(href="#", class="dropdown-toggle", data-toggle="dropdown", id="hasRemind") 
              li(class="dropdown")
                a(href="#", class="dropdown-toggle", data-toggle="dropdown") #{user.nickname} 
                  b(class="caret")
                ul(class="dropdown-menu")
                  if user.owner
                    li
                      a(href="/nor/conf/article_write") 写新文章
                    li
                      a(href="/article_list") 管理文章
                  li
                    a(href="/nor/user_detail") 修改个人信息
                  li
                    a(href="/user_logout") 登出
            else
              li
                a(href='/user_loginPage') 登录
    div(class="g-main")
      block content
    div(class="footer") 
      hr
      p LingyuCoder 2013

    script(type='text/javascript', src='/javascripts/tools/jquery-1.10.2.min.js')
    script(type='text/javascript', src='/javascripts/tools/bootstrap.min.js')
    script(type='text/javascript', src='/javascripts/pageTools/Remind.js') 
    script(type='text/javascript', src='/javascripts/page/global.js') 

    block javascript
